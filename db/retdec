R2PM_BEGIN

RETDEC_URLBASE=https://retdec-tc.avast.com/repository/download/

RETDEC_MACOS=${RETDEC_URLBASE}/Retdec_MacBuild/.lastSuccessful/package/retdec-master-macos-64b.zip?guest=1
RETDEC_LINUX=${RETDEC_URLBASE}/RetDec_LinuxBuild/.lastSuccessful/package/retdec-master-linux-64b.zip?guest=1

R2PM_GIT "https://github.com/securisec/r2retdec"
R2PM_DESC "[retdec] Official Nightly binary build of the retdec decompiler"

R2PM_DOC="TODO r2pm doesnt support this URL yet "

R2PM_INSTALL() {
	(
		S="${R2PM_GITDIR}/retdec/bin/"
		cd "$S" || exit 1
		for a in * ; do
			ln -fs "${S}/${a}" "${R2PM_BINDIR}/$a"
		done
	)
}

R2PM_UNINSTALL() {
	(
		S="${R2PM_GITDIR}/retdec/bin/"
		cd "$S" || exit 1
		for a in * ; do
			rm -f "${R2PM_BINDIR}/$a"
		done
	)
}

R2PM_END
